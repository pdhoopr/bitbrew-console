{
  "private": true,
  "name": "bitbrew-console",
  "version": "0.0.0",
  "homepage": "https://github.com/BitBrew/console#readme",
  "description":
    "Console for BitBrew's second-generation connected vehicle platform.",
  "bugs": {
    "url": "https://github.com/BitBrew/console/issues"
  },
  "author": "Patrick Hooper <patrick@bitbrew.com> (https://bitbrew.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitBrew/console.git"
  },
  "scripts": {
    "format": "prettier --write '**/*.{js,json,md}'",
    "lint:css": "stylelint '**/*.js'",
    "lint:js": "eslint '**/*.js'",
    "precommit": "pretty-quick --staged",
    "start":
      "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.js",
    "test": "cross-env NODE_ENV=test jest"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.46",
    "axios": "^0.18.0",
    "mobx": "^4.2.1",
    "mobx-react": "^5.1.2",
    "mobx-state-tree": "^2.0.5",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "styled-components": "^3.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^8.0.0-beta.2",
    "babel-plugin-styled-components": "^1.5.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "chalk": "^2.4.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.5",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-compat": "^2.2.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "ip": "^1.1.5",
    "jest": "^22.4.3",
    "jest-diff": "^22.4.3",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "react-test-renderer": "^16.3.2",
    "react-testing-library": "^3.0.2",
    "strip-ansi": "^4.0.0",
    "stylelint": "9.1.3",
    "stylelint-config-prettier": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-no-unsupported-browser-features": "^3.0.0",
    "stylelint-order": "^0.8.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "svgr": "^1.9.2",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Edge versions",
    "last 2 Firefox versions",
    "last 2 Opera versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "babel": {
    "presets": ["./config/babel.js"]
  },
  "eslintConfig": {
    "root": true,
    "plugins": ["compat"],
    "extends": ["airbnb", "prettier", "prettier/react"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "compat/compat": "error",
      "no-param-reassign": [
        "error",
        {
          "ignorePropertyModificationsFor": ["self"],
          "props": true
        }
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [".js"]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "config/**/*.js",
          "src/__mocks__/**/*.js",
          "src/**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        },
        "settings": {
          "import/core-modules": ["bitbrew-test-helpers"]
        }
      }
    ]
  },
  "jest": {
    "setupFiles": ["<rootDir>/config/jest/localStorage.js"],
    "snapshotSerializers": ["<rootDir>/config/jest/diffSerializer.js"],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svg$": "<rootDir>/config/jest/svgTransformer.js"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "stylelint": {
    "plugins": ["stylelint-no-unsupported-browser-features", "stylelint-order"],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "processors": ["stylelint-processor-styled-components"],
    "rules": {
      "max-nesting-depth": [
        1,
        {
          "ignoreAtRules": ["media"]
        }
      ],
      "order/order": [
        "dollar-variables",
        "custom-properties",
        "declarations",
        "at-rules",
        "rules"
      ],
      "plugin/no-unsupported-browser-features": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": ["first-nested"],
          "ignore": ["after-comment"]
        }
      ]
    }
  }
}
