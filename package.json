{
  "private": true,
  "name": "bitbrew-console",
  "version": "0.0.0",
  "homepage": "https://github.com/BitBrew/console#readme",
  "description": "Console for BitBrew's second-generation connected vehicle platform.",
  "bugs": {
    "url": "https://github.com/BitBrew/console/issues"
  },
  "author": "Patrick Hooper <patrick@bitbrew.com> (https://bitbrew.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitBrew/console.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.production.js",
    "check:css": "stylelint '**/*.js'",
    "check:format": "prettier --list-different '**/*.{css,html,js,json,md}'",
    "check:js": "eslint '**/*.js'",
    "ci": "run-p --aggregate-output --continue-on-error check:* && run-s build",
    "format": "prettier --write '**/*.{css,html,js,json,md}'",
    "start": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.development.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "@reach/router": "^1.2.1",
    "axios": "^0.18.0",
    "jwt-decode": "^2.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-modal": "^3.8.1",
    "styled-components": "^4.2.0",
    "uniqid": "^5.0.3",
    "url-search-params-polyfill": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@svgr/webpack": "^4.2.0",
    "autoprefixer": "^9.5.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "chalk": "^2.4.2",
    "clean-webpack-plugin": "^2.0.1",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-compat": "^3.1.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.1.0",
    "ip": "^1.1.5",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.14",
    "prettier": "^1.17.0",
    "stylelint": "^10.0.1",
    "stylelint-config-prettier": "^5.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "stylelint-order": "^3.0.0",
    "stylelint-processor-styled-components": "^1.6.0",
    "terser-webpack-plugin": "^1.2.3",
    "thread-loader": "^2.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "browserslist": [
    "last 3 Chrome versions",
    "last 3 ChromeAndroid versions",
    "last 3 Edge versions",
    "last 3 Firefox versions",
    "last 3 FirefoxAndroid versions",
    "Firefox ESR",
    "last 3 Opera versions",
    "last 3 OperaMobile versions",
    "last 3 Safari versions",
    "last 3 iOS versions",
    "not dead"
  ],
  "babel": {
    "presets": [
      "./config/babel.js"
    ]
  },
  "eslintConfig": {
    "root": true,
    "settings": {
      "polyfills": [
        "URLSearchParams"
      ]
    },
    "plugins": [
      "compat",
      "react-hooks"
    ],
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "compat/compat": "error",
      "jsx-a11y/anchor-has-content": [
        "error",
        {
          "components": [
            "BlockLink",
            "IconLink",
            "Link",
            "NavLink"
          ]
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "BlockLink",
            "IconLink",
            "Link",
            "NavLink"
          ],
          "specialLink": [
            "to"
          ],
          "aspects": [
            "invalidHref",
            "noHref",
            "preferButton"
          ]
        }
      ],
      "jsx-a11y/heading-has-content": [
        "error",
        {
          "components": [
            "Heading",
            "Heading1",
            "Heading2",
            "Heading3",
            "Subheading",
            "Text"
          ]
        }
      ],
      "react/forbid-prop-types": [
        "error",
        {
          "forbid": [
            "any"
          ],
          "checkContextTypes": true,
          "checkChildContextTypes": true
        }
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "react-hooks/exhaustive-deps": "warn",
      "react-hooks/rules-of-hooks": "error"
    },
    "overrides": [
      {
        "files": [
          "config/**/*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{css,html,js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.js": [
      "eslint",
      "stylelint"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "stylelint": {
    "plugins": [
      "stylelint-no-unsupported-browser-features",
      "stylelint-order"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "rules": {
      "max-nesting-depth": [
        3,
        {
          "ignoreAtRules": [
            "media"
          ]
        }
      ],
      "order/order": [
        "dollar-variables",
        "custom-properties",
        "declarations",
        "at-rules",
        "rules"
      ],
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "css-appearance",
            "css-resize",
            "multicolumn",
            "text-size-adjust",
            "viewport-units"
          ]
        }
      ],
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  }
}
