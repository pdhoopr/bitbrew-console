{
  "private": true,
  "name": "bitbrew-console",
  "version": "0.0.0",
  "homepage": "https://github.com/BitBrew/console#readme",
  "description": "Console for BitBrew's second-generation connected vehicle platform.",
  "bugs": {
    "url": "https://github.com/BitBrew/console/issues"
  },
  "author": "Patrick Hooper <patrick@bitbrew.com> (https://bitbrew.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitBrew/console.git"
  },
  "scripts": {
    "format": "prettier --write '**/*.{js,json,md}'",
    "lint:css": "stylelint '**/*.js'",
    "lint:js": "eslint '**/*.js'",
    "precommit": "pretty-quick --staged",
    "start": "webpack-dev-server --config config/webpack.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.51",
    "@reach/router": "^1.1.1",
    "axios": "^0.18.0",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "mobx-state-tree": "^2.2.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-modal": "^3.4.5",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-react": "^7.0.0-beta.51",
    "@svgr/webpack": "^2.0.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0-beta.3",
    "babel-plugin-styled-components": "^1.5.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "chalk": "^2.4.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-compat": "^2.4.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "ip": "^1.1.5",
    "prettier": "^1.13.5",
    "pretty-quick": "^1.6.0",
    "stylelint": "^9.3.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-no-unsupported-browser-features": "^3.0.0",
    "stylelint-order": "^0.8.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  },
  "browserslist": [
    "last 3 Chrome versions",
    "last 3 ChromeAndroid versions",
    "last 3 Edge versions",
    "last 3 Firefox versions",
    "last 3 FirefoxAndroid versions",
    "Firefox ESR",
    "last 3 Opera versions",
    "last 3 OperaMobile versions",
    "last 3 Safari versions",
    "last 3 iOS versions",
    "not dead"
  ],
  "babel": {
    "presets": [
      "./config/babel.js"
    ]
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "compat"
    ],
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "compat/compat": "error",
      "jsx-a11y/anchor-has-content": [
        "error",
        {
          "components": [
            "Link",
            "IconLink"
          ]
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link",
            "IconLink"
          ],
          "specialLink": [
            "to"
          ],
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "jsx-a11y/heading-has-content": [
        "error",
        {
          "components": [
            "PageTitle",
            "SectionTitle",
            "ContentTitle",
            "Subtitle"
          ]
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "ignorePropertyModificationsFor": [
            "self"
          ],
          "props": true
        }
      ],
      "react/forbid-prop-types": [
        "error",
        {
          "forbid": [
            "any"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "config/**/*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "stylelint": {
    "plugins": [
      "stylelint-no-unsupported-browser-features",
      "stylelint-order"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "rules": {
      "max-nesting-depth": [
        1,
        {
          "ignoreAtRules": [
            "media"
          ]
        }
      ],
      "order/order": [
        "dollar-variables",
        "custom-properties",
        "declarations",
        "at-rules",
        "rules"
      ],
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "viewport-units"
          ]
        }
      ],
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  }
}
